{
  "name": "@tiberriver256/codex-alfred",
  "version": "0.1.0",
  "type": "module",
  "description": "Slack butler that bridges Slack threads to Codex CLI via the Codex TypeScript SDK.",
  "bin": {
    "codex-alfred": "dist/index.js"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "schemas",
    "README.md",
    "slack-app-manifest.yaml"
  ],
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "node --test --import=tsx"
  },
  "dependencies": {
    "@openai/codex-sdk": "*",
    "@slack/bolt": "^4.0.0",
    "ajv": "^8.12.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
