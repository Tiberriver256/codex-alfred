{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "text": {
      "type": "string"
    },
    "blocks": {
      "type": "array",
      "minItems": 1,
      "maxItems": 50,
      "items": {
        "$ref": "#/$defs/block"
      }
    },
    "attachments": {
      "type": "array",
      "minItems": 0,
      "maxItems": 5,
      "items": {
        "$ref": "#/$defs/attachment"
      }
    }
  },
  "required": [
    "text",
    "blocks",
    "attachments"
  ],
  "additionalProperties": false,
  "$defs": {
    "plainTextObject": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "plain_text"
          ]
        },
        "text": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "text"
      ],
      "additionalProperties": false
    },
    "mrkdwnTextObject": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "mrkdwn"
          ]
        },
        "text": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "text"
      ],
      "additionalProperties": false
    },
    "textObject": {
      "anyOf": [
        {
          "$ref": "#/$defs/plainTextObject"
        },
        {
          "$ref": "#/$defs/mrkdwnTextObject"
        }
      ]
    },
    "optionObject": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "text": {
              "$ref": "#/$defs/textObject"
            },
            "value": {
              "type": "string"
            }
          },
          "required": [
            "text",
            "value"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "text": {
              "$ref": "#/$defs/textObject"
            },
            "value": {
              "type": "string"
            },
            "description": {
              "$ref": "#/$defs/textObject"
            }
          },
          "required": [
            "text",
            "value",
            "description"
          ],
          "additionalProperties": false
        }
      ]
    },
    "headerBlock": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "header"
          ]
        },
        "text": {
          "$ref": "#/$defs/plainTextObject"
        }
      },
      "required": [
        "type",
        "text"
      ],
      "additionalProperties": false
    },
    "sectionBlock": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "section"
          ]
        },
        "text": {
          "$ref": "#/$defs/textObject"
        }
      },
      "required": [
        "type",
        "text"
      ],
      "additionalProperties": false
    },
    "dividerBlock": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "divider"
          ]
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false
    },
    "plainTextInputElement": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "plain_text_input"
          ]
        },
        "action_id": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "action_id"
      ],
      "additionalProperties": false
    },
    "checkboxesElement": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "checkboxes"
          ]
        },
        "action_id": {
          "type": "string"
        },
        "options": {
          "type": "array",
          "minItems": 1,
          "maxItems": 10,
          "items": {
            "$ref": "#/$defs/optionObject"
          }
        }
      },
      "required": [
        "type",
        "action_id",
        "options"
      ],
      "additionalProperties": false
    },
    "inputElement": {
      "anyOf": [
        {
          "$ref": "#/$defs/plainTextInputElement"
        },
        {
          "$ref": "#/$defs/checkboxesElement"
        }
      ]
    },
    "inputBlock": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "input"
          ]
        },
        "label": {
          "$ref": "#/$defs/plainTextObject"
        },
        "element": {
          "$ref": "#/$defs/inputElement"
        }
      },
      "required": [
        "type",
        "label",
        "element"
      ],
      "additionalProperties": false
    },
    "buttonElement": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "button"
          ]
        },
        "text": {
          "$ref": "#/$defs/plainTextObject"
        },
        "action_id": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "text",
        "action_id"
      ],
      "additionalProperties": false
    },
    "actionsBlock": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "actions"
          ]
        },
        "elements": {
          "type": "array",
          "minItems": 1,
          "maxItems": 5,
          "items": {
            "$ref": "#/$defs/buttonElement"
          }
        }
      },
      "required": [
        "type",
        "elements"
      ],
      "additionalProperties": false
    },
    "attachment": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string"
        }
      },
      "required": [
        "path"
      ],
      "additionalProperties": false
    },
    "block": {
      "anyOf": [
        {
          "$ref": "#/$defs/headerBlock"
        },
        {
          "$ref": "#/$defs/sectionBlock"
        },
        {
          "$ref": "#/$defs/dividerBlock"
        },
        {
          "$ref": "#/$defs/inputBlock"
        },
        {
          "$ref": "#/$defs/actionsBlock"
        }
      ]
    }
  }
}
